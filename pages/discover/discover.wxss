.banner {
  display: flex;
  justify-content: center;
  height: 0;
  padding-bottom: 150rpx;
  margin-bottom: 100rpx;
  background: #f00;
}

.banner swiper {
  width: 100%;
  height: 250rpx;
}

.banner swiper-item {
  box-sizing: border-box;
  padding: 0 5%;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.menu-items {
  display: flex;
  justify-content: space-around;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menu-item text {
  font-size: 20rpx;
  margin-top: 10rpx;
}

.menu_icon {
  width: 70rpx;
  height: 70rpx;
  background: #f00;
  border-radius: 50%;
  font-size: 55rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recommend {
  /* border: 1px solid #f00; */
  display: flex;
  flex-wrap: wrap;
}

.recommend-header {
  display: flex;
  justify-content: space-between;
  padding: 0 15rpx;
  width: 100%;
}

.recommend-title {
  font-size: 28rpx;
  font-weight: bold;
}

.recommend-more {
  border: 1px solid #999;
  border-radius: 30px;
  font-size: 20rpx;
  padding: 0 15rpx;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.recommend-songListBox {
  padding: 0 15rpx;
}
