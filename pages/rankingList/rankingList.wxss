.officialList {
  display: flex;
  flex-direction: column;
}

.officialList-row-active {
  background-color: #eee;
}

.officialList > view:first-child {
  font-size: 30rpx;
  font-weight: bold;
  margin: 25rpx 30rpx;
}

.officialList-row {
  position: relative;
  padding: 10rpx 30rpx; 
  display: flex;
  align-items: center;
}

.officialList-row > view:first-child {
  height: 200rpx;
}

.officialList image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.officialList image + text {
  font-size: 22rpx;
  position: absolute;
  bottom: 15rpx;
  left: 40rpx;
  color: #fff;
}

.officialList-row-list {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  line-height: 50rpx;
  margin-left: 30rpx;
  width: 65%;
}

.officialList-row-list text {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  color: #333;
}