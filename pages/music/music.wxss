@import "song-list/song-list-template.wxss";

/* 轮播图 */
.slides-wrap {
  display: flex;
  justify-content: center;
  height: 0;
  padding-bottom: 125rpx;
  margin-bottom: 125rpx;
  background-color: #f00;
  padding-top: 30rpx;
}
.slides {
  width: 100%;
}
.slides swiper {
  height: 250rpx;
}  
.slides swiper-item {
  box-sizing: border-box;
  padding: 0 5%;
}
.slides image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* 菜单栏 */
.menu-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-top: 30rpx;
}
.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.menu-item .menu_icon {
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #f00;
  border-radius: 50%;
}
.menu-item .iconfont {
  font-size: 60rpx;
  color: #fff;
}
.menu-item text {
  font-size: 22rpx;
  margin-top: 10rpx;
}

/* 分割线 */
.hr {
  width: 100%;
  height: 1px;
  margin-top: 30rpx;
  background-color: #efefef;
}

/* 推荐歌单 新碟 新歌 */
.wrap {
  width: 90%;
  margin: 0 auto;
}