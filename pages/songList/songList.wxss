.detail-bg image {
  position: absolute;
  background: #efefef center;
  transform: background 1s;
  filter: blur(100px);
  z-index: 1;
}

.detail {
  position: absolute;
  z-index: 2;
  width: 100%;
}

.detail-head {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding-top: 30rpx;
  /* background: #000; */
}

.detail-head-img {
  margin-right: 50rpx;
}

.detail-head-msg {
  width: 55%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #fff;
}

.detail-head-name {
  font-size: 30rpx;
  font-weight: bold;
}

.detail-creator {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.detail-creator image {
  background: #666;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.detail-creator-name {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.detail-description {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 18rpx;
}

.detail-menu {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  color: #fff;
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.detail-playall {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  box-sizing: border-box;
  padding: 10rpx 5%;
  border-radius: 20rpx 20rpx 0 0;
  font-size: 30rpx;
  position: sticky;
  position: -webkit-sticky;
  top: 0;
}

.detail-playall-title {
  width: 420rpx;
  line-height: 100%;
}

.detail-playall-total {
  color: #666;
}

.detail-collect {
  width: 160rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #f00;
  border-radius: 30rpx;
  color: #fff;
}

.detail-playall-total, .detail-collect text {
  font-size: 20rpx;
}

.detail-playlist {
  background-color: #fff;
}

.detail-play {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  color: #666;
}

.detail-song {
  width: 85%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.detail-song-index {
  width: 50rpx;
  text-align: center;
}

.detail-song-name {
  font-size: 26rpx;
  color: #000;
}

.detail-song-other {
  font-size: 20rpx;
}

.detail-song-name, .detail-song-other {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.detail-play-hover {
  background: #efefef;
}
