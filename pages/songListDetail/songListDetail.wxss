.detail {
  background-size: 0;
}

.detail:after {
  content: "";
  width: 100%;
  height: 350rpx;
  background-size: 110%;
  background-position: center;
  background-color: #666;
  background-image: inherit;
  filter: blur(50px);
  z-index: -1;
  position: absolute;
  top: 0;
}

.detail-header, .detail-menu {
  color: #fff;
}

.detail-header {
  display: flex;
  flex-wrap: no-wrap;
}

.detail-header .songListBox {
  margin: 0;
}

.detail-info {
  height: 200rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #fff;
}

.detail-name, .detail-nickname text, .detail-description text {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.detail-nickname, .detail-description {
  position: relative;
  margin-right: 40rpx;
}

.detail-nickname::after, .detail-description::after {
  content: ">";
  position: absolute;
  right: -30rpx;
  top: 0;
  height: 100%;
  display: flex;
  align-items: center;
  margin-top: -3rpx;
}

.detail-name {
  font-size: 30rpx;
  font-weight: bold;
}

.detail-creator {
  display: flex;
  align-items: center;
}

.detail-nickname {
  margin-left: 20rpx;
}

.detail-creator image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #eee;
}

.detail-description text {
  font-size: 20rpx;
  width: 100%;
}



.detail-menu {
  display: flex;
  justify-content: space-around;
  text-align: center;
  font-size: 30rpx;
  height: 120rpx;
  box-sizing: border-box;
}

.detail-menu text {
  font-size: 22rpx;
}

.detail-list {
  flex-grow: 1;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  min-height: 420rpx;
}

.detail-playall {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0; 
  position: sticky;
  top: 0;
}

.detail-playall-title {
  flex-grow: 1;
  padding: 0 20rpx;
}

.detail-playall-title text {
  font-size: 28rpx;
}

.detail-playall-title .detail-playall-total {
  font-size: 22rpx;
  color: #666;
}

.detail-playall-total::before {
  content: "(共";
}

.detail-playall-total::after {
  content: "首)";
}

.detail-collect {
  line-height: 50rpx;
  text-align: center;
  background-color: #f00;
  border-radius: 30rpx;
  padding: 0 20rpx;
  color: #fff;
  font-size: 20rpx;
}

.detail-collect text::before {
  content: "+ 收藏（";
}

.detail-collect text::after {
  content: ")";
}

.detail-playlist {
  background-color: #fff;
}

.detail-play {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  overflow: auto;
}

.detail-play>text,
.detail-song>text:last-child,
.icon-songMore {
  color: #666;
}

.detail-song {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  max-width: 90%;
}

.detail-song>text:first-child {
  font-size: 24rpx;
  color: #000;
}

.detail-song>text:last-child {
  font-size: 18rpx;
}

.detail-song text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.icon-songMore {
  flex-shrink: 0;
}

.detail-play-hover {
  background: #eee;
}
